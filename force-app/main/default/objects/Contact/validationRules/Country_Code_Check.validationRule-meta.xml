<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Country_Code_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK( MobilePhone )), NOT( CONTAINS(  MobilePhone ,LEFT( &quot;+&quot; , 1) ) ) )</errorConditionFormula>
    <errorDisplayField>MobilePhone</errorDisplayField>
    <errorMessage>Enter the Number in +xx-------- format</errorMessage>
</ValidationRule>
