<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Referral_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL( Contact_Source__c , &quot;Referral&quot;) , ISBLANK( Referral__c ) )</errorConditionFormula>
    <errorDisplayField>Referral__c</errorDisplayField>
    <errorMessage>Please fill in Referrer</errorMessage>
</ValidationRule>
