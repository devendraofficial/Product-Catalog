<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK(  Phone  )), NOT( CONTAINS(   Phone  ,LEFT( &quot;+&quot; , 1) ) ) )</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Enter the Phone in +XX--------- Format</errorMessage>
</ValidationRule>
