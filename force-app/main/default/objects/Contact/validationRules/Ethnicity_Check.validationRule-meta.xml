<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Ethnicity_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT( ISPICKVAL( Religion__c , &quot;Hindu&quot;) ) ,NOT( ISPICKVAL(  Ethnicity__c  , &quot;N/A&quot;) ))</errorConditionFormula>
    <errorDisplayField>Ethnicity__c</errorDisplayField>
    <errorMessage>The Ethnicity to be N/A</errorMessage>
</ValidationRule>
